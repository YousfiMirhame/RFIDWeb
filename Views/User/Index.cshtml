    }

    @if (!string.IsNullOrEmpty(Model.Nom))
    {
        <h2>@Model.Nom</h2>
        <p><strong>Adresse :</strong> @Model.Adresse</p>
        <p><strong>Date de Naissance :</strong> @Model.DateNaissance.ToString("dd/MM/yyyy")</p>
    }

